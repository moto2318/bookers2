<!--プロフィール-->
<h1>ユーザーの詳細(User info)</h1>
<div>
    <%= image_tag user.get_profile_image(100, 100)%>
    <tab>"name"</tab>
  <h3><%= user.name %></h3>
  <tab>"introduction"</tab>
  <p> <%= user.introduction %></p>

  <% if user == current_user %>
  <p><%= link_to "ここにはユーザーアイコンが入る", edit_user_path(user)%></p>
  <% end %>
</div>
  

