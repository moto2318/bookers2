<%= render 'post_iamge/user', post_images: @post_images%>
<!--ユーザー一覧（自分含めた各ユーザー画像・名前・詳細画面へのリンク）-->
<h4>Users</h4>
<% @post_images.each do |post_image| %>
  <h2>image</h2>
  <h2>name</h2>

  <div>
    <%= image_tag post_image.get_image %>
    <p>投稿ユーザー画像：<%= image_tag post_image.user.get_profile_image(100, 100) %></p>
    <p>ユーザーネーム：<%= post_image.user.name %></p>
    <p>詳細へのリンク：<%= link_to "Show", user_path(post_image.user) %></p>
  </div>
<% end %>