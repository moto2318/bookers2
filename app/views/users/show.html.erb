<%= render 'post_iamge/user', post_images: @post_images%>
  <!--#Usersの詳細（ユーザーが投稿したもの一覧・本のタイトル[リンク付き]・説明）。-->
  <div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>

<!-- ユーザーの投稿一覧 -->

<% @post_images.each do |post_image| %>
<div>
  <%= link_to post_image_path(post_image.id) do %>
    <%= image_tag post_image.get_image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag post_image.user.get_profile_image(100,100) %></p>
  <p>Title：<%= post_image.user.name %></p>
  <p>Opinion：<%= post_image.caption %></p>
</div>
<% end %>

